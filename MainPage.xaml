<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.PasswordMeter.MainPage"
             xmlns:converters="clr-namespace:Maui.PasswordMeter.Converters"
             BackgroundColor="{DynamicResource SecondaryColor}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StrengthToColorConverter x:Key="StrengthToColor"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <Grid RowSpacing="25" RowDefinitions="Auto,Auto,Auto,Auto,*"
              Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">

            <Label 
                Text="Enter a password:"
                Grid.Row="0"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Slider x:Name="StrengthSlider"
                    Grid.Row="1"
                    Minimum="0"
                    Maximum="1"
                    ValueChanged="OnValueChanged"/>

            <ProgressBar BindingContext="{x:Reference StrengthSlider}"
                         Grid.Row="2"
                         Progress="{Binding Value}"
                         ProgressColor="{Binding Value, Converter={StaticResource StrengthToColor}}" />

            <Label x:Name="ValueLabel"
                   Grid.Row="3" />
        </Grid>
    </ScrollView>
</ContentPage>
